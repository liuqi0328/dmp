<!doctype html>
<html>
<head>
   <title>Beyond Voice by FRSH</title>
   <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
   <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
   <link href="/src/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
<header>
    <% include ./partials/navbar %>
</header>
<div class="container">
<div class="col-sm-10 col-sm-offset-1">

   <h1><span class="fa fa-sign-in"></span>Users</h1>
   <a href="/profile/frsh/clients/users/invite-user" class="btn btn-info">Invite new user</a>
   <a href="/profile" class="btn btn-info">Back to profile</a>

   <h4>Users information: </h4>

   <table class='table table-hover table-bordered'>
      <tr class='active'>
         <th class='col-md-3'>First name: </th>
         <th class='col-md-3'>Last name: </th>
         <th class='col-md-2'>Email: </th>
         <th class='col-md-2'>Permissions: </th>
         <th class='col-md-2'>Client ID: </th>
         <th></th>
         <th></th>
      </tr>
      <% for (var i = 0; i < users.length; i++) { %>
         <tr>
            <td><%= users[i].firstName %></td>
            <td><%= users[i].lastName %></td>
            <td><%= users[i].local.email %></td>
            <td><%= users[i].role %></td>
            <td><%= users[i].ownerId %></td>
            <td>
               <form action="/profile/edit-profile" method="get">
                  <input type='hidden' class='form-control' name='userId' value='<%= users[i]._id %>'>
                  <input type="submit" value="Edit user" class="btn btn-info"/>
               </form>
            </td>
            <td>
               <form action="/profile/delete-profile" method="get">
                  <input type="submit" value="Delete user" class="btn btn-info"/>
               </form>
            </td>
         </tr>
      <% } %>
   </table>


   <div class="text-center">
      <p><center>Fresh Digital Group Inc.</center></p>
   </div>

</div>
</div>
<footer>
    <% include ./partials/footer %>
</footer>
<% include ./partials/scripts %>
</body>
</html>
