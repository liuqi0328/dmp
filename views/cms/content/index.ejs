<!doctype html>
<html>

<head>
    <title>Beyond Voice by FRSH</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="/src/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <header>
        <% include ../../partials/navbar %>
    </header>
    <div class="container">
        <div class="col-sm-10 col-sm-offset-1">
            <h1> <span class="fa fa-sign-in"></span>Contents</h1>
            <h4>Contents: </h4>
            <a href="/cms/contents/new" class="btn btn-info">Add Content</a>

            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
            <% } %>

            <table class='table table-hover table-bordered'>
                <tr class='active'>
                    <th class='col-md-3'>Name: </th>
                    <th class='col-md-3'>Location: </th>
                    <th class='col-md-2'>Created At: </th>
                    <th class='col-md-2'>Last Updated: </th>
                    <th></th>
                    <th></th>
                </tr>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <%= data[i].name %>
                        </td>
                        <td>
                            <%= data[i].content_location %>
                        </td>
                        <td>
                            <%= data[i].created_at %>
                        </td>
                        <td>
                            <%= data[i].last_updated %>
                        </td>
                        <td>
                            <form action="/cms/contents/<%=data[i]._id%>/update" method="get">
                                <input type="submit" value="Edit Content Tag" class="btn btn-info" />
                            </form>
                        </td>
                        <td>
                            <form action="/cms/contents/<%=data[i]._id%>/delete" method="get">
                                <input type="submit" value="Delete Content Tag" class="btn btn-info" />
                            </form>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <footer>
        <% include ../../partials/footer %>
    </footer>
    <% include ../../partials/scripts %>
</body>

</html>