<!doctype html>
<html>

<head>
    <title>Beyond Voice by FRSH</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="/src/css/style.css" rel="stylesheet" type="text/css">
</head>

<body>
    <header>
        <% include ../../partials/navbar %>
    </header>
    <div class="container">
        <div class="col-sm-10 col-sm-offset-1">
            <h1><span class="fa fa-sign-in"></span>Content Tags</h1>
            <h4>Content Tags: </h4>
            <a href="/cms/content_tags/new" class="btn btn-info">Add Content Tag</a>

            <% if (message.length > 0) { %>
                <div class="alert alert-danger">
                    <%= message %>
                </div>
            <% } %>

            <table class='table table-hover table-bordered'>
                <tr class='active'>
                    <th class='col-md-3'>Name: </th>
                    <th class='col-md-3'>Active Content: </th>
                    <th class='col-md-2'>Created At: </th>
                    <th class='col-md-2'>Last Updated: </th>
                    <th></th>
                </tr>
                <% for (var i = 0; i < data.length; i++) { %>
                    <tr>
                        <td>
                            <%= data[i].content_tag.name %>
                        </td>
                        <td>
                            <%= data[i].active_content ?  data[i].active_content.name : '' %>
                        </td>
                        <td>
                            <%= data[i].content_tag.created_at %>
                        </td>
                        <td>
                            <%= data[i].content_tag.last_updated %>
                        </td>
                        <td>
                            <a href="/cms/content_tags/<%=data[i].content_tag._id%>">
                                <i class="fa fa-eye"></i>
                            </a>
                            <a href="/cms/content_tags/<%=data[i].content_tag._id%>/update">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="/cms/content_tags/<%=data[i].content_tag._id%>/delete">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
    <footer>
        <% include ../../partials/footer %>
    </footer>
    <% include ../../partials/scripts %>
</body>

</html>